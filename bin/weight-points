# http://www.wtfpl.net/ for more details.

real_path="$(readlink -f "${0}")" \
  || fail "Failed to get real path to executable."
main_dir="${real_path%/*}/.." \
  || fail "Failed to get absolute path of main directory."
lib_dir="${main_dir}/lib"
name="${0##*/}"

libs=(
  "config"
  "io"
  "tally"
  "food"
  "weigh_in"
  "sync_state"
  "analyze"
  "calculate"
)
for lib in "${libs[@]}"; do
  source "${lib_dir}/${lib}"
done

sync_state
case "${name}" in
  tally)
    weigh_in
    tally_then_tally
    ;;
  weigh-in)
    weigh_in_assertively
    ;;
  food)
    food
    ;;
  analyze)
    analyze
    ;;
  *)
    fail "I don't know how to be '${name}'."
    ;;
esac
sync_state
